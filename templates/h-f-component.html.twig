{% extends 'base.html.twig' %}

{% block header %}
    <div class="container-fluid">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-light bg-light w-100">
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        {% if links is defined %}
                            {% for link in links %}
                                <li class="nav-item">
                                    <a class="nav-link {{ app.request.get('_route') == link.path ? 'active, font-weight-bold' : 'text-secondary' }}"
                                       href="{{ path(link.path) }}">{{ link.name }}</a>
                                </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            </nav>

        </div>
    </div>
    <div class="container-fluid" style="background-color: #72ba75">
        <div class="row">
            <div class="col-12">
                <div class="carousel-item">
                    <img src="{{ asset('images/index-banner.jpg') }}" alt="index-banner-1">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Public Travel With NFC</h5>
                        <p>quotes</p>
                    </div>
                </div>

            </div>
            {% block main %}

            {% endblock %}
        </div>
    </div>



{% endblock %}

{% block footer %}
    <footer class="page-footer font-small special-color-dark">
        <hr>
        <p class="text-center">&copy;PTWN copyright from project ELFS</p>
    </footer>
{% endblock %}
